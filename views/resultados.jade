var docs = require("./app").docs
extends ./layout.jade
block contenido
 - var contenido = docs;
 - var count = 0;
 
 table.table
  thead
    tr
       th Primer Digito
       th Operacion
       th Segundo Digito
       th Resultado
       th Fecha
  tbody
   - for (var i = contenido.length - 1; i >= 0; i--) 
       tr
        td= contenido[i].primer
        td= contenido[i].operacion 
        td= contenido[i].segundo 
        td= contenido[i].resultado  
        td= contenido[i].fecha.getDate() +" / "+(contenido[i].fecha.getMonth()+1)+" / "+contenido[i].fecha.getFullYear()
        td
         form(action="/#{contenido[i]._id}")  
          button.btn.btn-default.btn-lg(type='submit')
            span.glyphicon.glyphicon-remove(aria-hidden='true') Eliminar
          button.btn.btn-default.btn-lg(type='button')
            span.glyphicon.glyphicon-refresh(aria-hidden='true') Actualizar
       
     
      
    


   
  a(href="login") Volver
  